<%= form_for message, remote: true do |form| %>
  

  <%= form.hidden_field :room_id, value: room.id%>

  <div class="input-group pt-4">
    <%= form.text_area :content,placeholder: "Type your message here...", class: 'form-control mr-2'%>
    <div class="input-group-append">
      <%= form.submit "Send Message",class: 'btn btn-primary data-btn' %>
    </div>
  </div>
<% end %>
